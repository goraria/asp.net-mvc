@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>

    <div class="container-fluid">
        <h1 class="h3 mb-2 text-gray-800">Create New City</h1>
        <p class="mb-4">
            Insert a new city into database
        </p>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Addition City</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <form action="/admin/SaveNewCity" method="post">
                        <div class="form-group mb-3">
                            <label for="formGroupExampleInput">Name of new City</label>
                            <input type="text" name="name" class="form-control" id="formGroupExampleInput" placeholder="Please enter name of new City">
                        </div>
                        <div class="form-group mb-3">
                            <label for="formGroupExampleInput2">City's description</label>
                            <input type="text" name="country" class="form-control" id="formGroupExampleInput2" placeholder="Please enter descriptions">
                        </div>
                        <div class="form-group mb-3">
                            <label for="formGroupExampleInput2">Check out</label>
                            <div>
                                <button href="#" class="btn btn-success btn-icon-split" style="margin-bottom: 20px">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-plus"></i>
                                    </span>
                                    <span class="text" style="width: 96px">Addition</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
